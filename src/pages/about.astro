---
// src/pages/about.astro
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
---

<Layout
  title="About - HilBar Consulting"
  description="Learn about HilBar LLC's mission, expertise, and the team behind our AI-powered consulting solutions."
>
  <Navigation />
  <!-- Structured Data for About Page -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ConsultingFirm",
      "name": "HilBar Consulting",
      "url": "https://hilbar.llc/about",
      "logo": "https://hilbar.llc/hilbar_logo_nobg.png",
      "description": "HilBar Consulting accelerates enterprise transformation through strategic AI integration, supply chain intelligence, and organizational change expertise.",
      "foundingDate": "2023",
      "sameAs": ["https://www.linkedin.com/company/hilbar-consulting"],
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "Customer Support",
        "email": "info@hilbar.llc",
        "availableLanguage": "English"
      },
      "areaServed": {
        "@type": "Place",
        "name": "Global"
      },
      "knowsAbout": [
        "AI Strategy",
        "Supply Chain Optimization",
        "Digital Transformation",
        "Executive Coaching",
        "HR AI Integration",
        "Organizational Change"
      ]
    }
  </script>

  <!-- FAQ Structured Data for About Page -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "What makes HilBar different from other AI consultancies?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "HilBar delivers not only deep technical AI expertise but also organizational transformation, executive coaching, and domain-specific strategy. We bridge tech, people, and process."
          }
        },
        {
          "@type": "Question",
          "name": "What is HilBar's delivery methodology?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Our approach includes strategic assessment, rapid prototyping in 4-6 weeks, and scalable enterprise implementation with continuous optimization."
          }
        },
        {
          "@type": "Question",
          "name": "How fast can HilBar deliver measurable results?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "HilBar's clients typically see proof-of-concept results within 4-6 weeks and full transformation within 12 weeks. We prioritize speed-to-impact."
          }
        }
      ]
    }
  </script>

  <!-- Hero Section -->
  <section class="pt-24 pb-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16" data-aos="fade-up">
        <div
          class="inline-flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-pink-100 to-red-100 dark:from-pink-900/30 dark:to-red-900/30 rounded-full mb-6"
        >
          <span class="w-2 h-2 bg-pink-500 rounded-full"></span>
          <span class="text-sm font-semibold text-pink-700 dark:text-pink-300"
            >ABOUT HILBAR</span
          >
        </div>
        <h1
          class="text-4xl sm:text-5xl lg:text-6xl font-black tracking-tight mb-6 bg-gradient-to-r from-slate-900 via-pink-600 to-slate-900 dark:from-white dark:via-pink-400 dark:to-white bg-clip-text text-transparent"
        >
          Transformation at Scale
        </h1>
        <p
          class="text-xl sm:text-2xl text-slate-600 dark:text-slate-300 max-w-4xl mx-auto leading-relaxed"
        >
          We accelerate enterprise transformation through <span
            class="font-semibold text-slate-900 dark:text-white"
            >strategic AI integration</span
          > and <span class="font-semibold text-slate-900 dark:text-white"
            >proven methodologies</span
          > that deliver measurable competitive advantage.
        </p>
      </div>
    </div>
  </section>

  <!-- Impact Metrics Section -->
  <section
