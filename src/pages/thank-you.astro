---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Thank You | HilBar Consulting"
  description="Thank you for contacting HilBar Consulting. We'll be in touch shortly."
>
  <Navigation />
  <!-- Structured Data for Thank You Page -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": "Thank You - HilBar Consulting",
      "url": "https://hilbar.llc/thank-you",
      "description": "Confirmation page after submitting a contact request to HilBar Consulting. We will respond within 24 hours.",
      "mainEntity": {
        "@type": "Organization",
        "name": "HilBar Consulting",
        "url": "https://hilbar.llc",
        "logo": "https://hilbar.llc/hilbar_logo_nobg.png",
        "sameAs": ["https://www.linkedin.com/company/hilbar-consulting"],
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "Customer Service",
          "email": "info@hilbar.llc",
          "areaServed": "Global",
          "availableLanguage": ["English"]
        }
      }
    }
  </script>

  <!-- FAQ Structured Data for Thank You Page -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "When will HilBar respond to my inquiry?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "You can expect a response within 24 hours. Our team reviews every inquiry promptly and assigns it to the most relevant strategy lead."
          }
        },
        {
          "@type": "Question",
          "name": "What should I prepare before my strategy consultation?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Have clarity on your current challenges, transformation goals, and any internal stakeholders you'd like involved. We'll handle the rest."
          }
        },
        {
          "@type": "Question",
          "name": "Can I schedule a follow-up or change my meeting time?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, simply reply to the confirmation email or email info@hilbar.llc and we’ll accommodate your schedule."
          }
        }
      ]
    }
  </script>

  <section
    class="py-24 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-emerald-50 to-green-50 dark:from-emerald-900/20 dark:to-green-900/20 min-h-[80vh] flex items-center justify-center"
  >
    <div class="max-w-2xl mx-auto text-center">
      <div
        class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-green-500 to-emerald-500 text-white text-4xl font-bold rounded-full shadow-lg mb-6"
      >
        ✓
      </div>
      <h1
        class="text-3xl sm:text-4xl lg:text-5xl font-black text-slate-900 dark:text-white mb-6"
      >
        Message Received
      </h1>
      <p class="text-lg sm:text-xl text-slate-700 dark:text-slate-300 mb-10">
        Thank you for contacting HilBar Consulting. A member of our strategy
        team will review your message and respond within 24 hours.
      </p>
      <a
        href="/"
        class="inline-block px-8 py-4 bg-gradient-to-r from-pink-600 to-red-600 hover:from-pink-500 hover:to-red-500 text-white rounded-xl font-semibold text-lg shadow-lg transition-all duration-300"
      >
        Return to Homepage
      </a>
    </div>
  </section>
</Layout>
